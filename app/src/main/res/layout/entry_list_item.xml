<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="12dp"
    card_view:cardBackgroundColor="@color/colorPrimary"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dailyDevImage">
                <ImageView
                    android:id="@+id/dailyDevImageView"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:backgroundTint="#000000"
                    android:backgroundTintMode="add"
                    android:scaleType="center"
                    card_view:srcCompat="@drawable/example_image">
                </ImageView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:background="@drawable/entry_gradient"
                    android:layout_alignBottom="@+id/dailyDevImageView">

                </View>
            </RelativeLayout>

            <TextView
                android:id="@+id/dailyDevTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/dailyDevImage"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/karla_bold"
                android:text="Title of Devotional"
                android:textColor="#BFFFFFFF"
                android:textSize="8pt">

            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/dailyDevText"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_margin="8dp"
            android:fontFamily="@font/karla"
            android:text="Hello!"
            android:textColor="#BFFFFFFF">

        </TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>